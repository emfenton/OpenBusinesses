@page
@model RazorPagesBusiness.Pages.Businesses.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>San Diego's Patriot-owned Businesses </h1>

<p>
    <a asp-page="Create">Submit a Business</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Business[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Business[0].Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Business[0].Website)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Business) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Website)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
